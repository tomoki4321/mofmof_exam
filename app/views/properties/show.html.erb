<p id="notice"><%= notice %></p>

<p>
  <strong>物件名:</strong>
  <%= @property.name %>
</p>

<p>
  <strong>賃料:</strong>
  <%= @property.rent %>
</p>

<p>
  <strong>住所:</strong>
  <%= @property.address %>
</p>

<p>
  <strong>築年数:</strong>
  <%= @property.age %>
</p>

<p>
  <strong>備考:</strong>
  <%= @property.remarks %>
</p>


<div class="line"></div>
<%count=1%>
<%@nearests.each do |nearest|%>
  <h3><%="最寄駅#{count}"%></h3>
  <%count+=1%>
  <p>
    <strong>路線名:</strong>
    <%=nearest.route%>
  </p>

  <p>
    <strong>駅名:</strong>
    <%=nearest.station%>
  </p>

  <p>
    <strong>徒歩:</strong>
    <%=nearest.walk%>
  </p>

<%end%>




<%= link_to '編集', edit_property_path(@property) %> |
